<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ResultadoActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/adView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header com Gradiente -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/header_gradient">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ðŸ’µ Seus Ganhos"
                        android:textColor="@color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvCarroInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:alpha="0.9"
                        android:gravity="center"
                        android:text="VeÃ­culo"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/screen_padding">

                <!-- Result Cards -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/result_card_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ganho DiÃ¡rio"
                        android:textColor="@color/text_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvGanhoDia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="R$ 0,00"
                        android:textColor="@color/money_green"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/result_card_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ganho Semanal"
                        android:textColor="@color/text_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvGanhoSemanal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="R$ 0,00"
                        android:textColor="@color/money_green"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/result_card_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor por Hora"
                        android:textColor="@color/text_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvValorHR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="R$ 0,00"
                        android:textColor="@color/accent_teal"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/result_card_background"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Valor por KM"
                        android:textColor="@color/text_light"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvValorKM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="R$ 0,00"
                        android:textColor="@color/accent_teal"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Action Buttons -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAnalisarCorrida"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸš— ANALISAR CORRIDA"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/gain_green"
                    app:cornerRadius="12dp"
                    app:elevation="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSalvar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸ’¾ SALVAR DADOS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/car_blue"
                    app:cornerRadius="12dp"
                    app:elevation="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCopiar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="12dp"
                    android:text="ðŸ“‹ COPIAR DADOS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/secondary"
                    app:cornerRadius="12dp"
                    app:elevation="4dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVoltar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="24dp"
                    android:text="â¬…ï¸ VOLTAR"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/warning_orange"
                    app:cornerRadius="12dp"
                    app:elevation="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7404233027158501/9547300416"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
