<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ResultadoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header com Gradiente -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/header_gradient">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’µ Seus Ganhos"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvCarroInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VeÃ­culo"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:alpha="0.9" />
            </LinearLayout>
        </FrameLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding"
            android:gravity="center_horizontal">

            <!-- Result Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/result_card_background"
                android:layout_marginBottom="12dp"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ganho DiÃ¡rio"
                    android:textSize="13sp"
                    android:textColor="@color/text_light" />
                <TextView
                    android:id="@+id/tvGanhoDia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/money_green"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/result_card_background"
                android:layout_marginBottom="12dp"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ganho Semanal"
                    android:textSize="13sp"
                    android:textColor="@color/text_light" />
                <TextView
                    android:id="@+id/tvGanhoSemanal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/money_green"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/result_card_background"
                android:layout_marginBottom="12dp"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valor por Hora"
                    android:textSize="13sp"
                    android:textColor="@color/text_light" />
                <TextView
                    android:id="@+id/tvValorHR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_teal"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/result_card_background"
                android:layout_marginBottom="24dp"
                android:padding="16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Valor por KM"
                    android:textSize="13sp"
                    android:textColor="@color/text_light" />
                <TextView
                    android:id="@+id/tvValorKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$ 0,00"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent_teal"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Action Buttons -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnalisarCorrida"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸš— ANALISAR CORRIDA"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@color/gain_green"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalvar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ’¾ SALVAR DADOS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@color/car_blue"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopiar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“‹ COPIAR DADOS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                app:backgroundTint="@color/secondary"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVoltar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="â¬…ï¸ VOLTAR"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                app:backgroundTint="@color/warning_orange"
                app:cornerRadius="12dp"
                app:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
