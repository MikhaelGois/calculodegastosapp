<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RideAnalysisActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/header_gradient"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸš— AnÃ¡lise de Corrida"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verifique se vale a pena aceitar"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="4dp"
                    android:alpha="0.8" />
            </LinearLayout>
        </FrameLayout>

        <!-- Card Principal de RecomendaÃ§Ã£o -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRideRecommendation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="12dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="4dp"
            app:strokeColor="@color/neutral_300">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- RecomendaÃ§Ã£o -->
                <TextView
                    android:id="@+id/tvRecommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ANALISANDO..."
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Dados da Corrida -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <!-- Valor por Hora -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’° Valor/Hora"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_dark"
                            android:layout_marginBottom="6dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvOfferedHourValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="R$ 0,00"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/gain_green" />

                            <TextView
                                android:id="@+id/tvCalculatedHourValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="MÃ­nimo: R$ 0,00"
                                android:textSize="12sp"
                                android:textColor="@color/neutral_600"
                                android:gravity="end" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Valor por KM -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ Valor/KM"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_dark"
                            android:layout_marginBottom="6dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvOfferedKmValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="R$ 0,00"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/car_blue" />

                            <TextView
                                android:id="@+id/tvCalculatedKmValue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="MÃ­nimo: R$ 0,00"
                                android:textSize="12sp"
                                android:textColor="@color/neutral_600"
                                android:gravity="end" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Ganho LÃ­quido Estimado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ganho LÃ­quido Estimado: "
                        android:textSize="14sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvNetGain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 0,00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/money_green" />
                </LinearLayout>

                <!-- BotÃµes de Mapa -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:spacing="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenMaps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ—ºï¸ Maps"
                        android:textSize="12sp"
                        app:backgroundTint="@color/car_blue"
                        app:cornerRadius="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOpenWaze"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“ Waze"
                        android:textSize="12sp"
                        app:backgroundTint="@color/expense_red"
                        app:cornerRadius="8dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BotÃµes de AÃ§Ã£o -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:spacing="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAcceptRide"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="âœ… ACEITAR"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/gain_green"
                app:cornerRadius="12dp"
                android:visibility="visible"
                style="@style/Widget.MaterialComponents.Button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRejectRide"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="âŒ RECUSAR"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@color/expense_red"
                app:cornerRadius="12dp"
                android:visibility="visible"
                style="@style/Widget.MaterialComponents.Button" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
